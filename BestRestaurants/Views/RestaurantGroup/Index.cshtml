@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}

@foreach (Restaurant restaurant in Model)
{
  <ul>@Html.ActionLink($"{restaurant.Description}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cousine.Name</ul>
}

<hr />
<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Delete All restaurants", "DeleteAll")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
