@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cousine>;

<h1>Cousine Type List</h1>
<hr />

@if (@Model.Count == 0)
{
<h3>No cousine types have been added yet!</h3>
}

@foreach (Cousine cousine in Model)
{
<ul>@Html.ActionLink($"{cousine.Name}", "Details", new { id = cousine.CousineId })</ul>
}

<hr />
<p>@Html.ActionLink("Add New Cousine Type", "Create")</p>
<p>@Html.ActionLink("Delete All Cousine Types", "DeleteAll")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
